<section class="hero is-bold is-warning image-spacer">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        Administrative Panel
      </h1>
      <h2 class="subtitle">
        Welcome <%= current_user.full_name %>
      </h2>
    </div>
  </div>
</section>

<%= paginate @users %>

<% @users.each do |u| %>
<div class="box">
  <div class="level">
    <div class="level-item">
      <h1 class="title"><%= u.full_name %></h1>
    </div>
    <div class="level-item">
      <div class="nav">
        <div class="nav-right">
          <h3 class="subtitle is-4"><%= link_to "View", admin_user_path(u.id), class: "nav-item" %></h3>
          <h3 class="subtitle is-4"><%= link_to "Edit", edit_admin_user_path(u.id), class: "nav-item" %></h3>
          <h3 class ="subtitle is-4"><%= link_to "Delete", admin_user_path(u.id), class: "nav-item", method: :delete %></h3>
          <% unless u.admin? %>
            <h3 class="subtitle is-4"><%= link_to "Impersonate", admin_user_impersonate_path(u.id), method: :post, class: "nav-item" %></h3>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
  <% end %>
  
<p><%= link_to "Create new user", new_admin_user_path %></p>

