   <%= form_for @movie, :html => { :multipart => true } do |f| %>
        <% if @movie.errors.any? %>
          <div class="notification is-warning">
            <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
            <ul>
              <% @movie.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <div>
        <%= f.label :title, class: "label" %>
        <p class="control">
          <%= f.text_field :title, placeholder: "What's the name of your movie?", class: "input" %>
        </p>
      </div>
      <div>
        <%= f.label :release_date, class: "label"  %>
        <p class="control">
          <%= f.date_field :release_date, class: "input" %>
        </p>
      </div>
      <div>
        <%= f.label :director, class: "label"  %>
        <p class="control">
          <%= f.text_field :director, class: "input"  %>
        </p>
      </div>
      <div>
        <%= f.label :runtime_in_minutes, class: "label"  %>
        <p class="control">
          <%= f.number_field :runtime_in_minutes, class: "input"  %>
        </p>
      </div>
      <div>
        <%= f.label :description, class: "label"  %>
        <p class="control">
          <%= f.text_area :description, class: "input"  %>
        </p>
      </div>
      <div class="image-spacer">
        <%= f.file_field :image %>
      </div>
      <div>
        <%= f.submit "Submit", class: "button is-primary" %> 
      </div>
    <% end %>